@{
    ViewData["Title"] = "Status Ordem Status - ";
}
@*<style type="text/css">
    .dt-buttons {
        float: right !important;
}
</style>*@

<div class="titulo-pagina">
    <span>
        SmartEstoque
        <i class="fas fa-caret-right"></i>Status Ordem de remessa
    </span>
</div>

<div id="dvAtvDsvContent" class="custom-drop" style="display: none;">
    <button class="btn btn-outline-dark custom-drop-item" id="btnAtivar">
        <i class="fa fa-check">&nbsp;</i> Ativar
    </button>
    <button class="btn btn-outline-dark custom-drop-item" id="btnDesativar">
        <i class="fa fa-times">&nbsp;</i> Desativar
    </button>
</div>

<div id="divPesquisa">
    <div class="campos-holder">
        <i class="fas fa-search fa-lg" style="color: #293949;"></i>
        <i class="fas fa-grip-lines-vertical" style="color: #293949;"></i>
        <input id="txtCodStaFil" class="ctrl-filtro numerico" maximo="9" placeholder="Cód. status" style="width: 25%;" />
         <i class="fas fa-grip-lines-vertical" style="color: #293949;"></i>
        <input id="txtDesStaFil" type="text" class="ctrl-filtro" maxlength="50" autocomplete="off" placeholder="Nome status" />
         <i class="fas fa-grip-lines-vertical" style="color: #293949;"></i>
        <select id="ddlStatus" class="form-control">
            <option value="0" selected="selected">Selecione um status...</option>
            <option value="1">ATIVO</option>
            <option value="2">DESATIVADO</option>
        </select>
        <i class="fas fa-grip-lines-vertical" style="color: #293949;"></i>
        <button class="btn btn-success" id="btnPesquisarTela" onclick="pesquisar()">
            Pesquisar
        </button>
    </div>
    <div class="row">
         <button class="btn btn-success" id="btnNovoStatus" onclick="cadastrarNovoStatus()" style="width: 100px">
            Novo
        </button>
    </div>
    <div>
        <table id="grdCadastroOrdemRemessa" class="display" style="width:100%">
            <thead>
                <tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
    @*<div class="dataTables_consulta">
        <div id="grdStatusOrdemRemessaContainer"></div>
    </div>*@
</div>

<!-- Cadastro -->
<div id="divCadastro" style="display: none;">
    <form action="#" id="frmCadastro" novalidate="novalidate">
        <div class="tgv-cabecalho-container">
            <div class="col-md-6 titulo-tela">
                <strong class="strong-cabecalho-tgv">Cadastro do status</strong>
            </div>
            <div class="col-md-6 tgv-crud-log-text divShowHide">
                <strong class="strong-cabecalho-codigo-tgv">Código:</strong> <span><input type="text" id="txtCodStaOrdRms" class="input-span-title" value="" readonly/></span>                
            </div>
        </div>
        <div class="tgv-crud-container tgv-mat-closer">           
            <div id="divFunInserir" class="col-md-12 nopaddingright" style="display: none; display: flex;">
                <div class="form-group">
                    <label for="input-text-1" style="margin-bottom: 0px;">
                        <strong class="strong-min-tgv">*Descrição:</strong>
                    </label>
                    <div class="mdl-textfield mdl-js-textfield">
                        <input maxlength="50" name="txtDescricaoStatus" id="txtDescricaoStatus" class="mdl-textfield__input text-uppercase limparTooltipKeyDown">
                        <label class="mdl-textfield__label" for="txtDescricaoStatus" disabled></label>
                    </div>
                </div>
            </div>

        </div>


        <div class="row tgv-button-toolbar" style="margin-left: 500px;">
            <span>
                <button id="btnInserirCadastro" type="button" class="btn btn-success" onclick="InserirStatus()">
                    <i class="fas fa-save"></i> 
                    Salvar
                </button>
                <button id="btnEditarCadastro" type="button" class="btn btn-success" onclick="alterarStatus()">
                    <i class="fas fa-save"></i>
                    Salvar
                </button>
                <button id="btnFecharCadastro" type="button" class="btn btn-danger">
                    <i class="fa fa-arrow-left"></i>
                    Voltar
                </button>
            </span>
        </div>

    </form>
</div>
@Html.Partial("~/Views/Paginas/CadastroStatusOrdemRemessa/_IndexScript.cshtml")
